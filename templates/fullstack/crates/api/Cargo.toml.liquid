[package]
name = "{{project-name}}-api"
version = "0.1.0"
edition = "2021"
publish = false

# See more keys and their definitions at https://doc.rust-lang.org/cargo/reference/manifest.html

[dependencies]
time = { version = "0.3", features = ["wasm-bindgen", "serde-human-readable"] }
serde = { version = "1", features = ["derive"] }
async-trait = "0.1.59"
thiserror = "1"

{% if stackable_is_release %}
# Stackable
stackable-bridge = { version = "{{stackable_release_ver}}" }
{% endif %}

{% if stackable_is_main %}
# Stackable
stackable-bridge = { git = "https://github.com/futursolo/stackable" }
{% endif %}

[features]
resolvable = ["stackable-bridge/resolvable"]
